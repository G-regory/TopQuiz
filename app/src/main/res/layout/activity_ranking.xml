<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.RankingActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Classement Top 5"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/activity_ranking_order_alphab_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sorts A - Z"
            />

        <Button
            android:id="@+id/activity_ranking_order_number_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sorts score"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/activity_ranking_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</LinearLayout>